{
  "name": "todo-cli",
  "version": "1.0.0",
  "description": "todo app with node js",
  "main": "todo.js",
  "scripts": {
    "db:create:test": "set NODE_ENV=test&& npx sequelize-cli db:create",
    "pretest": "set NODE_ENV=test&& npx sequelize-cli db:drop && set NODE_ENV=test&& npx sequelize-cli db:create",
    "test": "set NODE_ENV=test&& jest --detectOpenHandles",
    "prepare": "cd .. && husky install todo-cli/.husky"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write ."
    ]
  },
  "author": "Nishanth",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "sequelize-cli": "^6.6.2"
  },
  "dependencies": {
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  }
}
